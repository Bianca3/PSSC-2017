@model WebMvcLibrarie.Models.MCarte

@{
    ViewBag.Title = "Detalii Carte";
}

<h2>Detalii Carte</h2>

@{
    var titlu = ViewBag.Titlu;
    var carte = ViewBag.Detalii;
    <p>Titlu: @titlu </p>
    <p>Autor: @carte.autor</p>
    <p>An: @carte.an</p>
    <p>ISSN: @carte.Nr</p>
    <p>Gen: @carte.gent, @carte.genc</p>
    <p>Stare: @carte.stare1, @carte.stare2</p>
}

    @if (carte.stare2.ToString() == "Disponibila")
    {
        using (Html.BeginForm("Imprumuta", "Home", new { enctype = "multipart/form-data" }))
        {
            <p>
                <input type="hidden" value="@titlu" name="titlu" />
                <input type="hidden" value="@carte.autor" name="autor" />
                <input type="hidden" value="@carte.Id" name="id" />
                <input type="hidden" value="@carte.an" name="an" />
                <input type="hidden" value="@carte.Nr" name="nr" />
                <input type="hidden" value="@carte.gent" name="gent" />
                <input type="hidden" value="@carte.genc" name="genc" />
                <input type="hidden" value="@carte.stare1" name="st1" />
                <input type="hidden" value="@carte.stare2" name="st2" />
                <input type="submit" value="Imprumuta" />
            </p>
        }
    }
    else if (carte.stare2.ToString() == "Imprumutata")
    {
        using (Html.BeginForm("Restituie", "Home", new { enctype = "multipart/form-data" }))
        {
            <p>
                <input type="hidden" value="@carte" name="carte" />
                <input type="submit" value="Restituie" />
            </p>
        }
    }

    @using (Html.BeginForm("Adaugare", "Home", FormMethod.Post))
    {
        <p>
            <input type="submit" value="Adauga" />
        </p>
    }

 @if (carte.stare1.ToString() == "InStoc")
 {
    using (Html.BeginForm("Cumpara", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
    {
        <p>
            <input type="hidden" value="@titlu" name="titlu" />
            <input type="hidden" value="@carte.autor" name="autor" />
            <input type="hidden" value="@carte.Id" name="id" />
            <input type="hidden" value="@carte.an" name="an" />
            <input type="hidden" value="@carte.Nr" name="nr" />
            <input type="hidden" value="@carte.gent" name="gent" />
            <input type="hidden" value="@carte.genc" name="genc" />
            <input type="hidden" value="@carte.stare1" name="st1" />
            <input type="hidden" value="@carte.stare2" name="st2" />
            <input type="submit" value="Cumpara" />
        </p>
    }
 }


