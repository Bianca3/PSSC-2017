@model WebMvcLibrarie.Models.MCarte

@{ 
    ViewBag.Title = "AdaugareCarte";
}
    
<h2>AdaugareCarte</h2>
@{ 
    List<SelectListItem> GenTOpt;
    List<SelectListItem> GenCOpt;
    GenTOpt = new List<SelectListItem>();
    GenCOpt = new List<SelectListItem>();
    GenTOpt = ViewBag.GenTOpt;
    GenCOpt = ViewBag.GenCOpt;
}

@using (Html.BeginForm("Adaugare", "Home", new { enctype = "multipart/form-data" }))
{
        <p>
        Id:
        @Html.TextBoxFor(c => c.Id) 
        </p>
        <p>
            Titlu:
            @Html.TextBoxFor(c => c.titlu)
        </p>
        <p>
            Autor:
            @Html.TextBoxFor(c => c.autor)
        </p>
        <p>
            ISSN:
            @Html.TextBoxFor(c => c.Nr)
        </p>
        <p>
            An:
            @Html.TextBoxFor(c => c.an)
        </p>
        <p>
            Gen:
             @Html.DropDownListFor(c => c.gent, GenTOpt)
        </p>
        <p>
            Gen:
            @Html.ListBoxFor(c => c.genc, GenCOpt)
        </p>
        <p>
            <input type="submit" value="Adauga" />
        </p>
}

    @{
        string msg = ViewBag.EvenimentMsg;
        if (msg != null)
        {
            <p> Eveniment : @msg </p>
        }
    } 

     

