<Window x:Class="TodoList2.NewTodoItem"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="NewTodoItem" Height="300" Width="300"
        DataContext="{Binding Source={StaticResource ResourceKey=Locator}, Path=NewTodoItem}">
    <StackPanel Orientation="Vertical">
        <TextBlock Margin="10 5 10 0" >Description</TextBlock>
        <TextBox Margin="10 5 10 0" Text="{Binding Path=Description, UpdateSourceTrigger=PropertyChanged}"></TextBox>
        <Button Margin="10 5 10 0" Command="{Binding AddNewItem}">Add</Button>
    </StackPanel>
</Window>
