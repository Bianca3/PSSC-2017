@model WebMvcLibrarie.Models.MCarte

@{ 
    ViewBag.Title = "AdaugareCarte";
}
    
<h2>AdaugareCarte</h2>

@using (Html.BeginForm("Adaugare", "Home", new { enctype = "multipart/form-data" }))
{
        <p>
        Id:
        @Html.TextBoxFor(c => c.Id) 
        </p>
        <p>
            Titlu:
            @Html.TextBoxFor(c => c.titlu)
        </p>
        <p>
            Autor:
            @Html.TextBoxFor(c => c.autor)
        </p>
        <p>
            ISSN:
            @Html.TextBoxFor(c => c.Nr)
        </p>
        <p>
            An:
            @Html.TextBoxFor(c => c.an)
        </p>
        <p>
            Gen:
            @Html.TextBoxFor(c => c.genc)
        </p>
        <p>
            Gen:
            @Html.TextBoxFor(c => c.gent)
        </p>
        <p>
            <input type="submit" value="Adauga" />
        </p>
}

    @{
        string msg = ViewBag.EvenimentMsg;
        if (msg != null)
        {
            <p> @msg </p>
        }
    } 

     

